<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.petrik.konyvtarasztali.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteOnClick" text="Törlés" />
      <TableView fx:id="booksTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="titleCol" minWidth="50.0" prefWidth="200.0" text="Cím" />
          <TableColumn fx:id="authorCol" minWidth="50.0" prefWidth="200.0" text="Szerző" />
            <TableColumn fx:id="publishYearCol" prefWidth="75.0" text="Kiadás éve" />
            <TableColumn fx:id="pageCountCol" prefWidth="75.0" text="Oldalszám" />
        </columns>
      </TableView>
   </children>
</VBox>
